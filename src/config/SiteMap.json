{
  "name": "SiteMap",
  "version": "0.1",
  "apiUrl": "https://eas-grist06.aston.ac.uk",
  "baseUrl": "http://localhost:3000",
  "pages": [{
      "text": "Home",
      "menu": "top",
      "icon": "fa-home",
      "weight": "0",
      "component": "ContentItem",
      "views": ["item"],
      "url": "/",
      "roles": ["anonymous"],
      "title": "Home Page",
      "dataUri": "/rest/content?_format=json",
      "allowItem": "true",
      "components": [{
          "type": "SideMenu"
        },
        {
          "type": "textbox",
          "text": "data.content"
        }
      ]
    }, {
      "text": "Groups",
      "menu": "top",
      "icon": "fa-group",
      "weight": "1",
      "component": "SearchableDataList",
      "views": ["list", "card", "listWithCheckboxes"],
      "url": "/group",
      "roles": ["authenticated"],
      "title": "My Groups",
      "dataUri": "/drupal-api.php?type=group",
      "allowItem": "true",
      "components": [{
          "type": "SideMenu"
        },
        {
          "ref": "searchString",
          "type": "textbox",
          "text": "Search groups"
        },
        {
          "type": "button",
          "text": "Search",
          "onclick": "this.UpdateDataList"
        }
      ]
    },
    {
      "text": "News",
      "menu": "side",
      "icon": "fa-event",
      "weight": "2",
      "component": "SearchableDataList",
      "url": "/news",
      "roles": ["anonymous"],
      "title": "Site News",
      "dataUri": "/drupal-api.php?type=news",
      "allowItem": "true",
      "components": [{
          "type": "SideMenu"
        },
        {
          "ref": "searchString",
          "type": "textbox",
          "text": "Search news"
        },
        {
          "type": "button",
          "text": "Search",
          "onclick": "this.UpdateDataList"
        }
      ]
    },
    {
      "text": "User Registration",
      "menu": "top",
      "icon": "fa-user",
      "weight": "3",
      "parent": "",
      "component": "Registration",
      "url": "/user/registration",
      "roles": ["group administrat"]
    },
    {
      "text": "GRiST Timeline",
      "menu": "side",
      "icon": "fa-calendar",
      "weight": "4",
      "parent": "",
      "component": "Timeline",
      "url": "/timeline",
      "roles": ["anonymous"]
    },
    {
      "text": "Contact Us",
      "menu": "side",
      "icon": "fa-mail",
      "weight": "5",
      "parent": "",
      "component": "Contact",
      "url": "/contact",
      "roles": ["anonymous"]
    },
    {
      "text": "About Us",
      "menu": "side",
      "icon": "fa-info",
      "weight": "6",
      "parent": "",
      "component": "About",
      "url": "/about",
      "roles": ["anonymous"]
    },
    {
      "text": "Documents",
      "menu": "side",
      "icon": "fa-file",
      "weight": "7",
      "parent": "",
      "component": "Documents",
      "url": "/documents",
      "roles": ["anonymous"]
    }
  ]
}
